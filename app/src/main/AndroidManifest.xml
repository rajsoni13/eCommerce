<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.raj.ecommerce">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/img_ecommerce"
        android:label="@string/app_name"
        android:roundIcon="@drawable/img_ecommerce"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ListViewItem"
            android:screenOrientation="nosensor"></activity>
        <activity android:name=".GridItemActivity"
            android:screenOrientation="nosensor" />
        <activity
            android:name=".home"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="nosensor"/>
        <activity android:name=".login"
            android:screenOrientation="nosensor"/>
        <activity android:name=".Register"
            android:screenOrientation="nosensor"/>
        <activity android:name=".MainActivity"
            android:screenOrientation="nosensor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>